<div class="card mt-3 card-form">
  <div class="card-header">

    <% if @category.persisted? %>
      <span class="d-flex">
        <h3><%= t('.edit_category') %></h3>
        <%=link_to fa_icon('window-close'), new_category_path, remote: true, class: "ml-auto align-self-center" %>
      </span>
    <% else %>
      <h3><%= t('.new_category') %></h3>

    <% end %>

  </div>

  <div class="card-body">

    <%= form_with(model: @category) do |f| %>
      <%# Дата операции %>
      <div class="form-group">
        <%= label_tag('inputName', t('.name'), class: 'font-weight-bold') %>
        <%= f.text_field :name, autofocus: true, 
                              class: "form-control", 
                              id:"inputName" %>
      </div>

      <%# Тип операции %>
      <div class="form-group">
        <%= label_tag('inputType', t('.type'), class: 'font-weight-bold') %>
        <%= select(:category, :operation_type, [[t('.type_income'), 'income'], [t('.type_expense'), 'expense']], {}, { placeholder: t('.type'), class: 'custom-select' }) %>
      </div>

      <%# Отправка формы %>
      <div class="actions">
        <%= f.submit t('.send'), class: 'btn btn-primary mb-2' %>
      </div>
    <% end %>

  </div>
</div>
