<div class="row justify-content-center">
  <div class="col-md-12 col-lg-6">
    <div class="card mt-2 border-dark mb-3">

      <div class="card-header">
        <h2><%= t('.change_your_password') %></h2>
      </div>
      <div class="card-body">

        <%= form_with(model: resource, as: resource_name, local: true, url: password_path(resource_name), method: :put) do |f| %>

          <%= render "partials/error", resource: resource %>

          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= label_tag('inputPassword1', t('.new_password'), class: 'font-weight-bold') %>
            <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %>
            <%= f.password_field :password, class: "form-control", 
                                            id: "inputPassword1",
                                            autofocus: true, 
                                            autocomplete: "new-password",
                                            placeholder: t('.new_password') %>
          </div>

          <div class="form-group">
            <%= label_tag('inputPassword2', t('.confirm_new_password'), class: 'font-weight-bold') %>
            <%= f.password_field :password_confirmation, class: "form-control", 
                                                         id: "inputPassword2",
                                                         autocomplete: "new-password",
                                                         placeholder: t('.confirm_new_password') %>
          </div>

          <div class="actions">
            <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
