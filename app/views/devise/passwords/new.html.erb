<div class="row justify-content-center">
  <div class="col-md-12 col-lg-6">
    <div class="card mt-2 border-dark mb-3">

      <div class="card-header">
        <h2><%= t('.forgot_your_password') %></h2>
      </div>
      <div class="card-body">

        <%= form_with(model: resource, as: resource_name, local: true, url: password_path(resource_name), method: :post) do |f| %>
          <%= render "partials/error", resource: resource %>

          <div class="form-group">
            <%= label_tag('inputEmail1', t('devise.registrations.edit.email'), class: 'font-weight-bold') %>
            <%= f.email_field :email, autofocus: true, 
                              autocomplete: "email", 
                              class: "form-control", 
                              id: "inputEmail1", 
                              placeholder: t('devise.registrations.edit.email') %>
          </div>

          <div class="actions">
            <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
