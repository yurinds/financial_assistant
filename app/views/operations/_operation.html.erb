<% symbol = "-" if operation.expense? %>
<% symbol = "+" if operation.income? %>
<% column_amount_class = "text-danger" if operation.expense? %>
<% column_amount_class = "text-success" if operation.income? %>

<tr>
  <td scope="row"><%= l(operation.date, format: :default) %></td>
  <td><%= operation.category %></td>
  <td class="d-none d-lg-table-cell"><%= operation.payment_method %></td>
  <td class="d-none d-lg-table-cell"><%= operation.description %></td>
  <td>
    <span class="<%= column_amount_class %> d-flex align-self-center">
      <%= symbol %>
      <%= number_to_currency(operation.amount, strip_insignificant_zeros: true) %>
      <span class="ml-auto">
        <%= link_to fa_icon('edit'), edit_budget_operation_path(budget, operation), remote: true %>
        <%= link_to fa_icon('trash-o'), budget_operation_path(budget, operation), 
                                       data: {confirm: 'Вы уверены?'},
                                       remote: true,
                                       method: :delete,
                                       class: "ml-1" %>
      </span>
    </span>
  </td>
</tr>
