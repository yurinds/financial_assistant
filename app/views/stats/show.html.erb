<%= collection_select(:budget, :budget_id, @budgets, :id, :to_s, { prompt: true, selected: @current_budget }, class: "custom-select mt-3", data: {url: stats_path}) %>

<ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" 
       id="daily_analytics-tab" 
       data-toggle="tab" 
       href="#daily_analytics" 
       role="tab" 
       aria-controls="daily_analytics" 
       aria-selected="true"><%= t('.daily_analytics') %></a>
  </li>
</ul>

<div class="tab-content mt-3" id="myTabContent">
  <div class="tab-pane fade show active" id="daily_analytics" role="tabpanel" aria-labelledby="daily_analytics-tab">

    <table class="table ">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Дата</th>
          <th scope="col">Сумма расходов</th>
          <th scope="col">Бюджет на день</th>
          <th scope="col">Сальдо</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'daily_analytics_row', collection: @daily_analytics %>
      </tbody>
    </table>

  </div>
</div>
