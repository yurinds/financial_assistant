<div class="row">
  <div class="col-sm-6">
    <div class="card mt-3">
      <div class="card-header">
        <h3><%= t('.head') %></h3>
      </div>

      <div class="card-body">

        <%= form_with(model: @new_budget) do |f| %>
          <%# Дата операции %>
          <div class="form-group">
            <%= label_tag('inputDate', t('.date_from'), class: 'font-weight-bold') %>
            <%= f.date_field :date_from, autofocus: true, 
                              class: "form-control", 
                              id:"inputDate" %>
          </div>

          <%# Отправка формы %>
          <div class="actions">
            <%= f.submit t('.send'), class: 'btn btn-primary mb-2' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
