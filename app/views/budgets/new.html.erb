<div class="row justify-content-center">
  <div class="col-md-12 col-lg-6">
    <div class="card mt-3">
      <div class="card-header">
        <h3><%= t('.head') %></h3>
      </div>

      <div class="card-body">

        <%= form_with(model: @new_budget) do |f| %>
          <%# Дата операции %>
          <div class="form-group">
            <%= label_tag('inputDate', t('.date'), class: 'font-weight-bold') %>
            <%= f.text_field :date,  
                              class: "form-control", 
                              id:"monthpicker" %>
          </div>
          <%# Отправка формы %>
          <div class="actions">
            <%= f.submit t('.send'), class: 'btn btn-primary mb-2' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
